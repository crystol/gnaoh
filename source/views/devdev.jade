//- form mixin
mixin cities(graphTitle)
    h1= graphTitle
    form(class='city-select', name='city-select')
        label 
            input(type='radio', name='city-select', value='chicago', checked, id='chicago')
            | Chicago 
        label
            input(type='radio', name='city-select', value='minneapolis')
            | Minneapolis
        label    
            input(type='radio', name='city-select', value='new york city')
            | New York City
        label
            input(type='radio', name='city-select', value='san francisco')
            | San Francisco 
extend skeleton
block content
    .line
        +cities('Line Graph')
    .pi
        +cities('Pi Graph')
    .area
        +cities('Area Graphs')
    .map
        h1 Map
    .legend
        .box.cpp
        span C++
        .box.dotnet
        span .Net
        .box.java
        span Java
        .box.javascript
        span Javascript
        .box.ruby
        span Ruby            
    script(src='js/devdev.js')