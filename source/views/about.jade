            //- Mixins for proficiency bars and tooltips
            mixin profBar(length, title, link)
                li
                    if link
                        a(href=link, target='_blank')= title
                    else
                        =title
                    .bar
                        div(class= 'bar-length-' + length)
                        span=length+'%'
            mixin bar(length)
                .bar
                    div(class= 'bar-length-' + length)
                    span= length+'%'
            mixin tooltip(tool, tip)
                li
                    span.tool= tool
                    .tip= tip
                    if block
                        block
